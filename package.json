{
  "name": "cm-online-reminder",
  "version": "0.1.0",
  "description": "A desktop application that integrates with the CameraMatics API and sends a desktop notification to the end user when a state change is detected",
  "main": "./out/main/index.js",
  "author": "Dean Brown",
  "license": "MIT",
  "homepage": "https://github.com/deanjbrown/cm-online-reminder",
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "build": {
    "appId": "com.cameramatics.cm-online-reminder",
    "productName": "CameraMatics Online Reminder",
    "directories": {
      "buildResources": "resources"
    },
    "mac": {
      "icon": "cm-online-reminder.icns"
    },
    "win": {
      "icon": "cm-online-reminder.ico"
    },
    "linux": {
      "icon": "cm-online-reminder.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "deanjbrown",
        "repo": "cm-online-reminder"
      }
    ]
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@radix-ui/react-dialog": "^1.1.3",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.4",
    "axios": "^1.7.9",
    "better-sqlite3": "^11.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.37.0",
    "electron-updater": "^6.1.7",
    "framer-motion": "^12.0.11",
    "lucide-react": "^0.468.0",
    "papaparse": "^5.5.3",
    "react-icons": "^5.4.0",
    "react-router": "^7.0.2",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.30.1",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "postcss": "^8.4.49",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.19.2",
    "typescript": "^5.5.2",
    "vite": "^5.3.1"
  }
}
